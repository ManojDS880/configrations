<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="manoj">
    <properties>
      <!-- JDBC -->
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/demo"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="root"/>

      <!-- Dialect: let Hibernate 6 auto-detect for MySQL; remove to silence the WARN -->
      <!-- <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/> -->

      <!-- Schema + SQL -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>

      <!-- Optional: reduce session event spam -->
      <property name="hibernate.session.events.log" value="false"/>
    </properties>
  </persistence-unit>
</persistence>
